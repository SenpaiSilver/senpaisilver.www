    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_APP": ".",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--host=::",
                // "--host=0.0.0.0",
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Routes",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_APP": ".",
            },
            "args": [
                "routes",
            ],
            "jinja": true
        }
    ]
}
